#include<iostream.h>
#include<conio.h>
void main()
{
    double N1,N2, prod;
    clrscr() ;
    cout<< "Enter two numbers: ";

    // Stores two floating point numbers in variable firstNumber and secondNumber respectively
    cin>> N1 >> N2;
 
    // Performs multiplication and stores the result in variable productOfTwoNumbers
    prod = N1 * N2;  

    cout<< "Product = " << prod;    
    
    getch();
}



